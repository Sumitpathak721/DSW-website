<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <title>Login</title>
  </head>

  <style>
    body {
      margin: 0 auto;
      margin-top: 140px;
      padding: 0;
      text-align: center;
      background-repeat: no-repeat;
      background-size: auto;
      object-fit: cover;
      background-image: url(wallpaper.jpg)
    }

    .outer {
      width: 6cm;
      background-color: #cc99ff;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto;
      padding: 100px;
      border-radius: 15px;
    }

    .inner {
      background-color: rgb(33, 62, 64);
      height: 26vh;
      margin: 0;
      padding: 80px;
      border-radius: 15px;
    }

    h1 {
      color: aliceblue;
      text-decoration: underline;
    }

    .form_txt {
      padding: 3px;
      display: block;
      margin: 8px;
    }

    .button {
      width: 80px;
    }

    button:hover {
      color: goldenrod;
      background-color: rgb(9, 9, 9);
      cursor: pointer;
      box-shadow: 2px 2px rgb(207, 194, 194);
    }

    .response {
      padding: 10px;
      border-radius: 20px;
      margin: 10px 5px;
      display: none;
    }
  </style>

  <body onload="onLoad()">
    <!-- <section id="login"> -->

    <!-- Login Form -->
    <div class="outer">
      <div class="inner">
        <h1>Login Form</h1>
        <form
          action="/auth/login"
          method="POST"
          id="loginform"
          class="login-form"
        >
          <div id="loginResponse" class="response"></div>
          <!-- <div for="">Login Form</div> -->
          <input type="text" name="ERP_ID" placeholder="ERP_ID" /><br />
          <input
            type="password"
            class="form_txt"
            name="password"
            placeholder="password"
          /><br />
          <button class="button" type="submit">Login</button>
        </form>

        <!-- Forget Password Form -->

        <form
          action="/auth/forgetpassword"
          method="POST"
          id="forgetform"
          style="display: none"
        >
          <div for="">Forget Password</div>
          <div id="forgetResponse" class="response"></div>
          <input type="text" name="name" placeholder="Name" /><br />
          <input type="text" name="ERP_ID" placeholder="ERP_ID" /><br />
          <button>Send Email</button>
        </form>
        <button
          style="
            border: none;
            background-color: white;
            text-decoration: underline;
          "
          onclick="switchForm()"
          id="switchBtn"
        >
          Forget password
        </button>
      </div>
    </div>
    <!-- </section> -->
  </body>
  <script src="/static/js/api/login.js"></script>
</html>
